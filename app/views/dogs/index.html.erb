<div class="main-container">
<div class="container left-container">
  <h3>All Pups</h3>
  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <label for="search_query" id="search-label">Search for a location:</label>
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>

  <div class="container cards-container" id="dogs"></div>
  <div class="row">
    <% @dogs.each do |dog| %>
      <div class="col-md-6 mb-4">
        <%= link_to dog_path(dog) do %>
          <% if dog.photos.attached? %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path dog.photos.first.key %>)"><%= dog.name %>
            </div>
          <% else %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1568688570940-831467d18af7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1000&q=80)">
            <%= dog.name %>
            </div>
          <% end %>
        </div>
      <% end %>
      <% end %>
  </div>
</div>
<%= render "shared/map" %>
</div>
