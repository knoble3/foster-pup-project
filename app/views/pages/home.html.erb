<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1512341350577-a09358311cb1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80);">
  <div class="container">
    <h1>Be a hero with <strong>Pupper</strong></h1>
    <p>Provide a loving home to a pup in need.</p>
    <a class="btn btn-outline-light" href="<%= new_user_registration_path %>">Join now</a>
  </div>
</div>



<div class="container py-5 card-trip-container ">
  <% @dogs.take(12).each do |dog| %>
    <%= link_to dog_path(dog) do %>
      <div class="card-trip">
        <% if dog.photos.first %>
          <%= cl_image_tag dog.photos.first.key, width: 350, crop: :scale %>
        <% else %>
        <img src="https://images.unsplash.com/photo-1568688570940-831467d18af7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1000&q=80" />
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2><%= dog.name %></h2>
            <p><%= dog.breed  %></p>
          </div>
          <h2 class="card-trip-age">Age: <%= dog.age %> weeks</h2>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
