<div class="background-container col-12">

    <div class="container d-flex flex-column align-items-end border-black col-md-6">
        <div class="row">
            <h2>Log in Here</h2>
        </div>
        <div class="row d-flex flex-column justify-content-center">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions d-flex flex-column justify-content-center">
                <div class="log-in-button d-flex justify-content-center">
                    <%= f.button :submit, "Log in", class: "btn btn-log-in" %>
                </div>
                <div class="forgot-password d-flex justify-content-center">
                    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link" %>
                </div>
              </div>

            <% end %>
        </div>

        <div class="row d-flex flex-column my-4">
            <div class="sign-up-links d-flex flex-column justify-content-center">
                <p>Don't have an account?</p>

                <%= link_to "Sign up", new_registration_path(resource_name), class: "link align-middles" %><br />
            </div>
        </div>


    </div>

</div>
