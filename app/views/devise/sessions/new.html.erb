<div class="background-container col-12 justify-content-center">

  <div class="d-flex flex-column align-items-center border-black col-md-6 form-box">


    <h2 class="align-self-center">Log in Here</h2>
    <div class="align-items-center justify-content-center">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs form-item">
        <%= f.input :email,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email" } %>
        <%= f.input :password,
        required: false,
        input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions d-flex flex-column justify-content-center">
        <div class="log-in-button d-flex justify-content-center">
          <%= f.button :submit, "Log in", class: "btn" %>
        </div>
      </div>

      <% end %>
      <div class="row d-flex flex-column my-4">
        <div class="sign-up-links d-flex flex-column justify-content-center">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link" %>
          Don't have an account?
          <%= link_to "Sign up", new_registration_path(resource_name), class: "link align-middles" %><br />
        </div>
      </div>
    </div>



  </div>

</div>
